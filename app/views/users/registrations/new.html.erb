<%= stylesheet_link_tag "users" %>
<div id="contact" class="section">
  <div class="fixed-wrapper">
    <h1>用户注册</h1>
  </div>
  <div class="container">
    <div class="content">      
      
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), role:"form")  do |f| %>
      
      <% unless devise_error_messages!.empty? %>
      <div class="form-group">
        <div class="col-md-1 col-sm-1 col-xs-12"></div>
        <div class="col-md-11 col-sm-11 col-xs-12">
          <h3>告警提示!</h3>
          <p><%= devise_error_messages! %></p>
        </div>
      </div>
      <% end %>
      
        <div class="form-group">
          <%= f.email_field :email, :autofocus => false, class:"form-control", id:"exampleInputEmail1", placeholder:"电子邮件", required:true %>
          <label for="exampleInputEmail1"><i class="icon-user"></i></label>
          <div class="clearfix"></div>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class:"form-control", id:"exampleInputPasswd", placeholder:"登录密码", required:true %>
          <label for="exampleInputPasswd"><i class="icon-lock"></i></label>
          <div class="clearfix"></div>
        </div>
        
        <div class="form-group">
          <%= f.password_field :password_confirmation, class:"form-control", id:"exampleInputConfirmation", placeholder:"重复密码", required:true %>
          <label for="exampleInputConfirmation"><i class="icon-lock"></i></label>
          <div class="clearfix"></div>
        </div>
        
        <div class="form-group">
          <br />
          <%= f.submit "提交注册", class:"btn" %>
        </div>
      <% end %>
      <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12"></div>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <br />
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
