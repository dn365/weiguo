<%= stylesheet_link_tag "users" %>
<div id="contact" class="section">
  <div class="fixed-wrapper">
    <h1>用户登录</h1>
  </div>
  <div class="container">
    <div class="content">
      <% if alert %>
      <div class="alert alert-color alert-warning">
        <h3>告警提示!</h3><p><%= alert %></p><a class="close" data-dismiss="alert" href="#" aria-hidden="true"><i class="icon-remove"></i></a>
      </div>
      <% end %>
      
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), role:"form")  do |f| %>
        <div class="form-group">
          <%= f.email_field :email, :autofocus => false, class:"form-control", id:"exampleInputEmail1", placeholder:"电子邮件", required:true %>
          <label for="exampleInputEmail1"><i class="icon-user"></i></label>
          <div class="clearfix"></div>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class:"form-control", id:"exampleInputPasswd", placeholder:"登录密码", required:true %>
          <label for="exampleInputPasswd"><i class="icon-lock"></i></label>
          <div class="clearfix"></div>
        </div>
        
        <div class="form-group">
          <% if devise_mapping.rememberable? -%>
          <h4><%= f.check_box :remember_me, id:"InputCheck" %><div class="InputCheck-title">记住帐号</div></h4>
          <div class="clearfix"></div>
          <% end %>
          <br />
          <%= f.submit "登录系统", class:"btn" %>
        </div>
      <% end %>
      <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-12"></div>
        <div class="col-md-6 col-sm-6 col-xs-12">
          <br />
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
