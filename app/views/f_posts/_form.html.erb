<%= form_for(@f_post, html:{role:"form", style:"margin-top: -100px;"}) do |f| %>
  <% if @f_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@f_post.errors.count, "error") %> prohibited this f_post from being saved:</h2>

      <ul>
      <% @f_post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.text_field :title, class:"form-control", placeholder:"水果名称", required:true %>
    <label><i class="icon-leaf"></i></label>
    <div class="clearfix"></div>
  </div>
  
  <div class="form-group">
    <%= f.file_field :f_image, class:"form-control", placeholder:"水果名称", required:true %>
    <label><i class="icon-picture"></i></label>
    <div class="clearfix"></div>
  </div>
  
  <div class="form-group">
    <%= f.text_field :sell_price, class:"form-control", placeholder:"零售价格(元/份)", required:true %>
    <label><i class="icon-credit-card"></i></label>
    <div class="clearfix"></div>
  </div>
  <div class="form-group">
    <%= f.text_field :base_price, class:"form-control", placeholder:"成本价格(元/份)", required:true %>
    <label><i class="icon-credit-card"></i></label>
    <div class="clearfix"></div>
  </div>
  
  <div class="form-group">
    <%= f.text_field :discount, class:"form-control", placeholder:"折扣比", required:true %>
    <label><i class="icon-bell"></i></label>
    <div class="clearfix"></div>
  </div>
  
  <div class="form-group">
    <%= f.number_field :f_weigth, class:"form-control", placeholder:"重量(克/份)", required:true %>
    <label><i class="icon-hdd"></i></label>
    <div class="clearfix"></div>
  </div>
  <div class="form-group">
    <%= f.check_box :add_stat, class:"form-control", required:true %>
    <label><i class="icon-lightbulb"></i></label>
    <div class="clearfix"></div>
    <div style="margin-top: -45px;margin-left: 100px;"><h4>是否上架 ?</h4></div>
  </div>
  
  <div class="form-group">
    <%= f.text_field :desc, class:"form-control", placeholder:"简单描述", required:true %>
    <label><i class="icon-tag"></i></label>
    <div class="clearfix"></div>
  </div>
  
  <div class="form-group">
    <%= f.text_area :detail, class:"form-control", placeholder:"详细信息", required:true %>
    <label><i class="icon-tag"></i></label>
    <div class="clearfix"></div>
  </div>
  
  <div class="form-group">
    <%= f.submit "保存信息", class:"btn btn-large" %>
    <div class="clearfix"></div>
  </div>
<% end %>
